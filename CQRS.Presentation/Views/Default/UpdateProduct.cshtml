@model CQRS.Presentation.CQRSPattern.Results.GetProductUpdateByIdQueryResult

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <form method="post">
        <label>Ürün ID</label>
        <input type="text" asp-for="Id" class="form-control" />
        <br />
        <label>Ürün Adı</label>
        <input type="text" asp-for="ProductName" class="form-control" />
        <br />
        <label>Ürün Markası</label>
        <input type="text" asp-for="Brand" class="form-control" />
        <br />
        <label>Ürün Stok</label>
        <input type="text" asp-for="Stock" class="form-control" />
        <br />
        <label>Ürün Fiyat</label>
        <input type="text" asp-for="ProductPrice" class="form-control" />
        <br />
        <label>Ürün Kategori</label>
        <input type="text" asp-for="Category" class="form-control" />
        <br />
        <button class="btn btn-success">Güncelle</button>
    </form>
</div>